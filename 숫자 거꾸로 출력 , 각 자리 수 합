#include <algorithm>
#include <iostream>
#include <string.h>


using namespace std;


int main() 
{

  string str;
   while(1) {
    long sum=0;
  cin>>str;
   int n=str.size();
  if (!str.compare("0")) { break;}
   for(int i=0; i<n; i++ ) {
     
     sum+=(long)str[i]-'0';     
   }
   reverse(str.begin(), str.end());
  while(str[0]=='0') { str=str.substr(1);}
  cout<<str<<" "<<sum<<endl;
   }
   
   }
            

